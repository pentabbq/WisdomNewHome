<!--pages/change/change.wxml-->
<view class="container">  
  <view class="app-logo">
    <image style="width: 150rpx; height: 150rpx; background-color: #fff;" src="{{src}}"></image>
  </view>
  <view class="usermotto">  
    <text class="user-motto">{{motto}}</text>    
    <input type="text" bindinput="userNameInput" placeholder='请输入账号'/>  
    <input type="text" bindinput="userPasswordInput" password="true" placeholder='请输入密码'/>
    <button bindtap="openConfirm">更换账号</button>  
  </view>  
</view>  
